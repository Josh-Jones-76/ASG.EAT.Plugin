<UserControl x:Class="ASG.EAT.Plugin.Views.EATControlPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="440" d:DesignHeight="850"
             Background="{DynamicResource BackgroundBrush}"
             Foreground="{DynamicResource PrimaryBrush}">

    <UserControl.Resources>
        <!-- Tilt buttons: inherit NINA's button template, just override sizing -->
        <Style x:Key="TiltBtn" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        </Style>
        <!-- Step input boxes: inherit NINA's textbox template -->
        <Style x:Key="StepBox" TargetType="TextBox" BasedOn="{StaticResource StandardTextbox}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <!-- Action buttons -->
        <Style x:Key="ActionBtn" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="6">
        <StackPanel>

            <!-- Connection -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6">
                <StackPanel>
                    <!-- Status LED + text -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6" HorizontalAlignment="Center">
                        <Ellipse Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"
                                 Stroke="{DynamicResource BorderBrush}" StrokeThickness="1">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <!-- Default: gray (disconnected) -->
                                    <Setter Property="Fill" Value="#555555"/>
                                    <Style.Triggers>
                                        <!-- Connected + idle = green -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsConnected}" Value="True"/>
                                                <Condition Binding="{Binding IsMoving}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Fill" Value="#22CC22"/>
                                        </MultiDataTrigger>
                                        <!-- Connected + moving = red -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsConnected}" Value="True"/>
                                                <Condition Binding="{Binding IsMoving}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Fill" Value="#DD2222"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding ConnectionStatus}"
                                   VerticalAlignment="Center" FontWeight="SemiBold" FontSize="11"/>
                    </StackPanel>

                    <!-- Current Operation Status -->
                    <TextBlock Text="{Binding CurrentOperation}"
                               FontSize="10"
                               Foreground="{DynamicResource ButtonForegroundBrush}"
                               Margin="0,0,0,6"
                               HorizontalAlignment="Center"
                               MinHeight="14"
                               FontStyle="Italic"/>

                    <!-- Port and Baud row -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailablePorts}"
                                  SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                                  Margin="0,0,4,0"/>
                        <Button Grid.Column="2" Content="&#x27f3;"
                                Command="{Binding RefreshPortsCommand}"
                                ToolTip="Refresh COM ports"
                                Padding="8,4" FontSize="12" Margin="0,0,8,0"
                                Style="{StaticResource StandardButton}"/>
                        <TextBlock Grid.Column="3" Text="Baud:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox Grid.Column="4"
                                  ItemsSource="{Binding BaudRates}"
                                  SelectedItem="{Binding SelectedBaud, Mode=TwoWay}"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding ConnectCommand}"
                                Padding="40,10" Margin="4,2" MinHeight="40" MinWidth="120"
                                Style="{StaticResource StandardButton}">
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <TextBlock Text="&#x1F50C;" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                                <TextBlock Text="Connect" FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DisconnectCommand}"
                                Padding="40,10" Margin="4,2" MinHeight="40" MinWidth="120"
                                Style="{StaticResource StandardButton}">
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <TextBlock Text="&#x1F5D9;" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                                <TextBlock Text="Disconnect" FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tilt Control - Combined 3x3 Grid with Current Positions -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6">
                <StackPanel>
                    <TextBlock Text="Tilt Control at Sensor" FontWeight="SemiBold"
                               FontSize="12" Margin="0,0,0,2"/>
                    <TextBlock Text="Controls and labels are based on your orientation settings. Orientation is critical to have correct for these values to correspond correctly."
                               FontSize="10" FontWeight="Normal"
                               TextWrapping="Wrap"
                               Opacity="0.8"
                               Margin="0,0,0,6"/>

                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 0: TL Position Display -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="2,2,2,0">
                            <TextBlock Text="Current Value:" FontSize="9" Opacity="0.7" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DisplayPositionTL}" FontSize="10" FontFamily="Consolas"
                                       HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,1,0,0"/>
                        </StackPanel>

                        <!-- Row 0: TR Position Display -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="2,2,2,0">
                            <TextBlock Text="Current Value:" FontSize="9" Opacity="0.7" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DisplayPositionTR}" FontSize="10" FontFamily="Consolas"
                                       HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,1,0,0"/>
                        </StackPanel>

                        <!-- Row 1: TL | Top | TR -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="2">
                            <Button Content="&#x25E4; TL" Command="{Binding MoveTopLeftCommand}" Style="{StaticResource TiltBtn}"/>
                            <TextBox Text="{Binding TopLeftSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                            <Button Content="&#x25B2; Top" Command="{Binding MoveTopCommand}" Style="{StaticResource TiltBtn}"/>
                            <TextBox Text="{Binding TopSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="2">
                            <TextBox Text="{Binding TopRightSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                            <Button Content="TR &#x25E5;" Command="{Binding MoveTopRightCommand}" Style="{StaticResource TiltBtn}"/>
                        </StackPanel>

                        <!-- Row 2: Left | Sensor | Right -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                            <Button Content="&#x25C4; Left" Command="{Binding MoveLeftCommand}" Style="{StaticResource TiltBtn}"/>
                            <TextBox Text="{Binding LeftSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                        </StackPanel>

                        <Border Grid.Row="2" Grid.Column="1"
                                Background="{Binding SensorColorBrush}"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4" Padding="14,10" Margin="4">
                            <TextBlock Text="Sensor" FontWeight="Bold" FontSize="11"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                            <TextBox Text="{Binding RightSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                            <Button Content="Right &#x25BA;" Command="{Binding MoveRightCommand}" Style="{StaticResource TiltBtn}"/>
                        </StackPanel>

                        <!-- Row 3: BL | Bottom | BR -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="2">
                            <Button Content="&#x25E3; BL" Command="{Binding MoveBottomLeftCommand}" Style="{StaticResource TiltBtn}"/>
                            <TextBox Text="{Binding BottomLeftSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                            <Button Content="&#x25BC; Bot" Command="{Binding MoveBottomCommand}" Style="{StaticResource TiltBtn}"/>
                            <TextBox Text="{Binding BottomSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Margin="2">
                            <TextBox Text="{Binding BottomRightSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StepBox}"/>
                            <Button Content="BR &#x25E2;" Command="{Binding MoveBottomRightCommand}" Style="{StaticResource TiltBtn}"/>
                        </StackPanel>

                        <!-- Row 4: BL Position Display -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Margin="2,0,2,2">
                            <TextBlock Text="{Binding DisplayPositionBL}" FontSize="10" FontFamily="Consolas"
                                       HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,1"/>
                            <TextBlock Text="Current Value:" FontSize="9" Opacity="0.7" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Row 4: BR Position Display -->
                        <StackPanel Grid.Row="4" Grid.Column="2" Margin="2,0,2,2">
                            <TextBlock Text="{Binding DisplayPositionBR}" FontSize="10" FontFamily="Consolas"
                                       HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,1"/>
                            <TextBlock Text="Current Value:" FontSize="9" Opacity="0.7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Legend -->
                    <TextBlock Text="Corners = 2-motor paired  |  Edges = 4-motor directional"
                               FontSize="9" Opacity="0.6" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Backfocus -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6">
                <StackPanel>
                    <TextBlock Text="Backfocus (All Motors)" FontWeight="SemiBold"
                               FontSize="12" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="&#x25C4; Inward" Command="{Binding BackfocusOutCommand}" Style="{StaticResource TiltBtn}" MinWidth="65"/>
                        <TextBox Text="{Binding BackfocusSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource StepBox}" Width="55"/>
                        <Button Content="Outward &#x25BA;" Command="{Binding BackfocusInCommand}" Style="{StaticResource TiltBtn}" MinWidth="65"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Utility -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6">
                <StackPanel>
                    <TextBlock Text="Utility" FontWeight="SemiBold"
                               FontSize="12" Margin="0,0,0,6"/>
                    <UniformGrid Rows="1" Columns="2" Margin="4,0">
                        <Button Command="{Binding ZeroAllCommand}"
                                Style="{StaticResource StandardButton}"
                                Margin="4,2" Padding="16,10" MinHeight="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x21BA;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                                <TextBlock Text="Zero All" FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding GetPositionsCommand}"
                                Style="{StaticResource StandardButton}"
                                Margin="4,2" Padding="16,10" MinHeight="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x1F4CD;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                                <TextBlock Text="Get Positions" FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ButtonForegroundBrush}"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Raw Command -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6"
                    Visibility="{Binding ShowRawCommand, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Raw Command" FontWeight="SemiBold"
                               FontSize="12" Margin="0,0,0,6"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding RawCommandText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas" FontSize="11"
                                 Padding="4,2" Margin="0,0,4,0"/>
                        <Button Grid.Column="1" Content="Send" Command="{Binding SendRawCommand}"
                                Padding="12,4" Style="{StaticResource StandardButton}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Activity Log -->
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4"
                    Padding="8" Margin="0,0,0,6"
                    Visibility="{Binding ShowActivityLog, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Activity Log" FontWeight="SemiBold" FontSize="12"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="Clear" Command="{Binding ClearLogCommand}"
                                Padding="8,2" Style="{StaticResource StandardButton}"/>
                    </Grid>
                    <ListBox ItemsSource="{Binding ActivityLog}"
                             Height="160"
                             FontFamily="Consolas" FontSize="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource PrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             x:Name="ActivityLogListBox">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Padding" Value="2,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                          TextWrapping="NoWrap"
                                          Foreground="{DynamicResource PrimaryBrush}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
